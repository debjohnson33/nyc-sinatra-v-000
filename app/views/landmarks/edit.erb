<h1>Edit <%= @landmark.name %></h1>

<form action="/landmarks/<%= @landmark.id%>" method="POST">
	<input type="hidden" name="_method" value="PATCH">

	<label for="landmark_name">Landmark Name: </label>
	<input type="text" name="landmark[name]" id="name" value="<%= @landmark.name %>">
	<br></br>

	<label for="landmark_year_completed">Landmark Year Completed:</label>
	<input type="integer" name="landmark[year_completed]" id="year_completed" value="<%= @landmark.year_completed%>">
	<br></br>
	<input type="submit" name="submit" value="Edit Landmark">

</form>