<form action="/figures/<%= @figure.id %>" method="POST">
	<input type="hidden" name="_method" value="PATCH">

	<%= @figure.name %>
	<label>Name</label>
	<input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>">
	<br></br>
	<label>Edit Landmarks</label>
	<br></br>
		<% Landmark.all.each do |landmark| %>
			<input type="checkbox" id="landmark_<%= landmark.id%>" name="figure[landmark_ids][]" value="<%=landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark)%>><%= landmark.name %>
			</input>
			<br></br>
		<% end %>

	<label for="">Edit Titles</label>
	<br></br>
		<% Title.all.each do |title| %>
		   <label for=""><%= title.name %></label>
		   <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" <%= 'checked'if @figure.titles.include?(title) %>>
		   <br></br>
		<% end %>

	<label for="">Add Title</label>
	<input type="text" id="new_title" name="title[name]" value="">
	<br></br>

	<label for="">Add Landmark</label>
	<input type="text" id="new_landmark" name="landmark[name]" value="">
	<br></br>

  	<input type="submit" name="" value="Edit Figure">
	
</form>